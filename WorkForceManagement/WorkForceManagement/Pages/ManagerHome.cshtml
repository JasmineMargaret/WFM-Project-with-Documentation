        <label id="empname" hidden="hidden"></label>
        <label id="manager" hidden="hidden"></label>
        <label id="wfm" hidden="hidden"></label>
        <label id="email" hidden="hidden"></label>
        <label id="exp" hidden="hidden"></label>
        <label id="requestee" hidden="hidden"></label>

        <label class="reqmsg">Request Message(Message must be atleast 10 character long):</label>
        <textarea id="reqmsg" class="reqtext"></textarea><br />

        <table>
            <tr>
                <td style="width:200px;"><button id="cancel" class="button-3" onclick="closeClick()">Cancel</button></td>
                <td><button id="send" type="submit" class="button-3" onclick="sendClick()">Send Request</button></td>
            </tr>
        </table>
    </div>
